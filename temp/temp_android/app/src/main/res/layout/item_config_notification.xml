<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/checkNotify"
        android:text="Văn bản đã theo dõi có thay đổi"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text14" />

    <Switch
        android:id="@+id/checkNotify"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginEnd="30dp"
        android:layout_toLeftOf="@id/checkEmail"
        android:thumb="@drawable/thumb_selector_detail"
        android:track="@drawable/track_selector_detail" />

    <Switch
        android:id="@+id/checkEmail"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:thumb="@drawable/thumb_selector_detail"
        android:track="@drawable/track_selector_detail" />

</RelativeLayout>